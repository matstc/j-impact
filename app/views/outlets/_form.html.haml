= form_for @outlet do |f|
  -if @outlet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@outlet.errors.count, "error")} prohibited this outlet from being saved:"
      %ul
        - @outlet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
