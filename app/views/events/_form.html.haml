= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f|

  .control-group.string
    %label.string.control-label
      Story
    .controls
      %p
        = @event.story
  = f.input :event_type, label: 'Type'
  = f.input :date
  = f.input :description
  = f.input :story_id, {as: :hidden}

  .form-actions
    = f.button :submit, class: 'btn-primary'

