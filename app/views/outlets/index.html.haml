.page-header
  %h1 Listing outlets

%table.table.table-striped
  %tr
    %th Name
    %th
    %th
    %th

  - @outlets.each do |outlet|
    %tr
      %td= outlet.name
      %td= link_to 'Show', outlet
      %td= link_to 'Modify', edit_outlet_path(outlet)
      %td= link_to 'Remove', outlet, data: {confirm: 'Are you sure?', method: :delete}

%br

.ul.nav-pills.nav
  %li
    = link_to new_outlet_path do
      %span.icon.icon-plus
      Add new outlet
